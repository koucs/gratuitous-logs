<h1 class="right_sub">
    <span class="right_sub">タグ</span>
</h1>
<div class="right_tag_cloud">
    <% tag_cloud tags, %w{css1 css2 css3 css4} do |tag, css_class| %>
        <%= link_to tag.name, "/articles/list_by_tag/#{tag.name}", class: css_class %>
    <% end %>
</div>
